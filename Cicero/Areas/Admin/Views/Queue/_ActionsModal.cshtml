@using Cicero.Service.Models
@using Cicero.Service.Helpers
@model ActionsViewModel

@inject Utils  _utils

<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

<form action="@Url.Content("~/admin" + _utils.GetTenantForUrl(false) + "/manage/stateworkflow/saveaction")" id="action-form" method="post">
    <div class="modal-header">
        <h5 class="modal-title" id="queueStateModalTitle">Add Action</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        @*@if (Model.Id != 0)
        {*@
            <div class="form-group">
                <label asp-for="Name">Action Name</label>
                <input type="text" class="form-control" asp-for="Name" placeholder="Enter Action Name">
                <div class="d-flex">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

            </div>
            <div class="form-group">
                <label>Type</label>
                <select class="custom-select role-queue" name="Type" asp-items="Model.TypeList">
                    <option value="">Choose an option</option>
                    <option value="E">Email</option>
                    <option value="L">Letter</option>
                    <option value="R">Report</option>
                </select>
            </div>
            <div class="form-group">
                <label>Template</label>
                <select class="custom-select role-queue" name="TemplateId" asp-items="Model.TemplateList">
                    <option value="">Choose an option</option>

                </select>
            </div>
            <div class="form-group border-bottom pb-3">
                <h6 class="font-weight-bold border-bottom pb-2 mb-3">Action</h6>
                <div class="custom-control custom-checkbox custom-control-inline">
                    <input type="checkbox" name="ActionType" class="custom-control-input" id="customCheck1">
                    <label class="custom-control-label" for="customCheck1">Create</label>
                </div>
                <div class="custom-control custom-checkbox custom-control-inline">
                    <input type="checkbox" class="custom-control-input" id="customCheck2">
                    <label class="custom-control-label" for="customCheck2">Send</label>
                </div>
            </div>
            <div class="form-group">
                <label>Sender</label>
                <select class="custom-select role-queue" name="ActionsSender" asp-items="Model.ActionsSenderlst">
                    <option value="">Choose an option</option>

                </select>
            </div>
            <div class="form-group">
                <label>Receiver</label>
                <select class="custom-select role-queue" name="ActionsReceiver" asp-items="Model.ActionsReceiverLst">
                    <option value="">Choose an option</option>

                </select>
            </div>
        @*}
        else
        {
            
        }*@
    </div>
    <div class="modal-footer">
        <button type="button" class="btn" data-dismiss="modal">Close</button>
        <button type="button" id="action-save" class="btn btn-primary">Save</button>
    </div>
</form>

<script type="text/javascript">

    $(document).ready(function () {

        //set caseformid
        if ($("#form_id").val() != " " && $("#form_id").val() != "") {
            $("#caseFormId-queue").val($("#form_id").val());
            $("#caseFormId-queue").siblings("label").text($("#form_id option:selected").text());

        }

    });
</script>