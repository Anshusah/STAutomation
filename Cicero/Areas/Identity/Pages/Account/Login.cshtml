@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<!-- main content starts -->
<main role="main" class="authentication-main-container">
    <!-- main content starts -->
    <div class="authentication authentication--login">
        <div class="authentication__sidebar">
            <div class="brand d-flex justify-content-center align-items-center">
                <img src="~/admin/assets/img/site-logo.png" alt="Vesuvio">
            </div>
        </div>
        <div class="authentication__content">
            <form class="form-userinput" method="POST">
                <!-- <div class="brand d-flex justify-content-center align-items-center">
                    <img src="~/admin/assets/img/site-logo.png" alt="Vesuvio">
                </div> -->
                <div asp-validation-summary="All" class="text-danger mt-4"></div>
                <h1 class="mb-4">Sign in to your account</h1>
                <div class="form-group">
                    <label asp-for="Input.Email">Email address</label>
                    <input asp-for="Input.Email" class="form-control" placeholder="" required="" autofocus="">
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group toggle-password-group">
                    <label asp-for="Input.Password">Password</label>
                    <input asp-for="Input.Password" class="form-control" placeholder="" required="">
                    <!-- <span toggle="#Password" class="toggle-password"><i class="ri-eye-line"></i></span> -->
                    <span asp-validation-for="Input.Password" class="text-danger"></span>   
                </div>
                <div class="form-group">
                    <div class="custom-control custom-checkbox">
                        <input class="custom-control-input" asp-for="Input.RememberMe">
                        <label class="custom-control-label" asp-for="Input.RememberMe">@Html.DisplayNameFor(m => m.Input.RememberMe)</label>
                    </div>
                    <!-- <label asp-for="Input.RememberMe">
                        <input asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label> -->
                </div>
                <button class="btn btn-primary btn-block" type="submit">Login</button>
                <p class="mt-4 mb-0 text-center">
                    <a asp-page="./ForgotPassword">Forgot Password?</a>
                </p>
                <br>
            
            </form>
        </div>
    </div>
    <!-- main content ends -->
</main>
<!-- main content ends -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
