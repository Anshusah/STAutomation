@using Cicero.Service.Services
@inject IArticleService Article
@{
    var banner = Article.GetArticleByIdentifier("home-banner");
    if (banner != null && !string.IsNullOrEmpty(banner.Content))
    {
        <section class="section-form">
            <div class="container">
                <div class="row">
                    <h1 class="title form-title">Simple Way to Send Money</h1>
                </div>
                <div class="row">
                    <form action="" class="form-st">
                        <div class="form-row">
                            <div class="form-group col-12">

                                <div class="input-group">
                                    <select class="custom-select  custom-select-lg" id="chooseCountry">
                                        <option selected>Choose a Country to send to</option>
                                        <option value="1">Uk</option>
                                        <option value="2">Australia</option>
                                        <option value="3">Nepal</option>
                                    </select>
                                    <div class="input-group-append">
                                        <button class="btn btn-getstarted btn-primary" type="button">Get Started</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                    <div class=" form-wrapper d-none">
                        <form action="" class="form-st">
                            <div class="form-st-exchange">
                                <div class="form-row">
                                    <div class="exchange-box">
                                        <div class="exchange-send">
                                            <label for="">How much to send</label>
                                            <div class="input-group">
                                                <input type="text" class="form-control" value="1,000" aria-label="Text input with dropdown button">
                                                <div class="input-group-append">
                                                    <button class="btn dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">GBP</button>
                                                    <div class="dropdown-menu">
                                                        <a class="dropdown-item selected" href="#">GBP</a>
                                                        <a class="dropdown-item" href="#">BDT</a>

                                                    </div>
                                                </div>

                                            </div>

                                        </div>
                                        <div class="exchange-receive">
                                            <label for="">How much to send</label>
                                            <div class="input-group">
                                                <input type="text" class="form-control" value="110,766.66" aria-label="Text input with dropdown button">
                                                <div class="input-group-append">
                                                    <button class="btn dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">GBP</button>
                                                    <div class="dropdown-menu">
                                                        <a class="dropdown-item selected" href="#">GBP</a>
                                                        <a class="dropdown-item" href="#">BDT</a>

                                                    </div>
                                                </div>
                                                <!-- <div class="exchange-send-input">

                                                </div> -->
                                                <!-- <div class="exchange-send-country">
                                                  <select class="select" id="selectCountry">
                                                    <option value="1" selected>Uk</option>
                                                    <option value="2">Australia</option>
                                                    <option value="3">Nepal</option>
                                                  </select>
                                                </div> -->
                                            </div>

                                        </div>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <small class="mx-auto mt-4">Exchange rate: 1 GBP = 108.14 BDT</small>
                                </div>
                            </div>
                            <div class="exchange-medium">
                                <div class="form-row">
                                    <h3 class="title">Choose how the user will receive the funds?</h3>
                                </div>
                                <div class="form-row">
                                    <div class="col btn-group btn-group-toggle" data-toggle="buttons">
                                        <label class="btn btn-secondary  active ">
                                            <input type="radio" name="options" id="option1" autocomplete="off" checked>
                                            <span class="icon">
