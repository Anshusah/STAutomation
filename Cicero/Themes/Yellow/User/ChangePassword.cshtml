@using Cicero.Service.Models
@using Cicero.Service.Helpers
@model ChangePasswordViewModel
@inject Permission Permission

@{
    ViewData["body"] = "inner-pg";
    ViewData["Title"] = "Change Password";
}
@await Html.PartialAsync("../Shared/_Header.cshtml")
<!-- nav e -->
<div class="jumbotron p-0 mt-0">
    <div class="rounded-0 inner-promo py-5">
        <div class="position-relative z-index-2 container">
            <h3 class="display-4 main-promo-caption heading">&nbsp;</h3>
        </div>
    </div>
</div>
<main role="main" class="container">
    <div class=" mt-2 pt-5">
        <div class="row mb-3">
            <div class="col-lg-6">
                <h3>Edit Profile</h3>
                <form action="@Url.Content("~/user/change-password.html")" method="post">
                    @*<div class="box-body p-4">*@
                    @Html.AntiForgeryToken()
                    <div class="status"></div>
                    <div asp-validation-summary="All" class="text-danger mt-2"></div>
                    <input type="hidden" name="Id" value="@Model.Id" />
                    <div class="clearfix"></div>
                    @*<div class="form-group">
                        <label class="sr-only">Email</label>
                        <input asp-for="Email" type="email" class="form-control" placeholder="Email" readonly>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>*@
                    <div class="form-group">
                        <label class="sr-only">Password</label>
                        <input asp-for="OldPassword" type="password" class="form-control" placeholder="Current Password">
                        <span asp-validation-for="OldPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="sr-only">New Password</label>
                        <input asp-for="NewPassword" type="password" class="form-control" placeholder="New Password">
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="sr-only">Confirm Password</label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm New Password">
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer">
                        @if (Permission.Can(UserCan.Edit_Profile))
                        {
                            <button type="submit" class="btn btn-primary">Change Password</button>
                        }
                        <a class="btn btn-link" href="@Url.Content("~/user/dashboard.html")">Go back </a>
                    </div>

                </form>
            </div>
        </div>
    </div>
</main>
<!-- get started e -->
<div class="Cicero-illustration">
    <img src="/frontend/img/Cicero-illustration.svg" class="img-fluid">
</div>
@await Html.PartialAsync("../Shared/_Footer.cshtml")
@section Scripts{}