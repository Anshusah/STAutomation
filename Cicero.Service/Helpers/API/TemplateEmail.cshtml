            body[yahoofix].grid_9:not(.mobile-inline),
            body[yahoofix].grid_10:not(.mobile-inline),
            body[yahoofix].grid_11:not(.mobile-inline),
            body[yahoofix].grid_12:not(.mobile-inline) {
